<?xml version="1.0" encoding="UTF-8" ?>

<beans default-lazy-init="true"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<!-- /properties/web/controllers.xml This file declares the visual beans 
		used by the web interface. It should not be modified but by the developers. 
		This file is referenced by /properties/applicationContext.xml. -->

    <bean id="defaultController" abstract="true">
        <property name="i18nService" ref="i18nService" />
        <property name="applicationService" ref="applicationService" />
    </bean>

    <bean id="ingredientController" parent="defaultController"
        class="org.esupportail.cookingapp.web.controllers.IngredientController"
        scope="request" />
        
    <bean id="recipeController" parent="defaultController"
        class="org.esupportail.cookingapp.web.controllers.RecipeController"
        scope="request" />

</beans>

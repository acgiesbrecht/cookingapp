<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.esupportail.cookingapp.web.utils.ResourceBundleFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>fr</default-locale>
			<supported-locale>fr</supported-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<message-bundle>META-INF.i18n.bundles.JsfMessages</message-bundle>
	</application>
	<lifecycle>
		<phase-listener>org.esupportail.cookingapp.web.rewrite.MultiPageMessagesSupport</phase-listener>
	</lifecycle>
<!-- 	<factory> -->
<!-- 		<exception-handler-factory>org.esupportail.commons.exceptions.ExceptionHandlerFactory</exception-handler-factory> -->
<!-- 	</factory> -->
</faces-config>

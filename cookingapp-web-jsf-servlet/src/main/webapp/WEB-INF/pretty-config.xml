<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.3 
                        http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">

    <rewrite trailingSlash="remove"  />
    
    <url-mapping id="root">
        <pattern value="/" />
        <view-id value="/stylesheets/welcome.xhtml" />
    </url-mapping>
    
    <!-- Ingredients -->
    <url-mapping id="ingredients">
        <pattern value="/ingredients" />
        <view-id value="/stylesheets/ingredients.xhtml" />
    </url-mapping>
    <url-mapping id="addIngredient">
        <pattern value="/ingredients/add" />
        <view-id value="/stylesheets/addIngredient.xhtml" />
    </url-mapping>

</pretty-config>